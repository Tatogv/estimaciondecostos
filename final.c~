#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int main(void)
{
int lang=0, bandera=0;
do
  { 
    printf("Favor de digitar 1 si el lenguaje deseado es jav, 2 java script, 3 c, 4 c sharp\n");
    
    scanf("%i", &lang); 
    
    while(bandera==0);
    {
      if(lang!=1&&lang!=2&&lang!=3&&lang!=4)
	printf("El valor ingresado no es valido\n"); 
      else 
	bandera=1; 
    }
  }
}
